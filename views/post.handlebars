    <h1 class="post-title center-align"> New Student Form </h1>
    <h4 class="post-require center-align"> (* indicates required fields) </h4>
    <div class="container">
        <div class="row">
            <form class="col s12" id="new-post-form">
                {{!-- Name --}}
                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="First Name" id="first_name" type="text" class="validate">
                        <label for="first_name">First Name*</label>
                    </div>
                    <div class="input-field col s6">
                        <input placeholder="Last Name" id="last_name" type="text" class="validate">
                        <label for="last_name">Last Name*</label>
                    </div>
                </div>
                {{!-- Email --}}
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate">
                        <label for="email">Email*</label>
                    </div>
                </div>
                {{!-- School --}}
                 <div class="row">
                    <div class="input-field col s12">
                        <input id="school" type="text">
                        <label for="school">School Name*</label>
                    </div>
                </div>
                {{!-- Main Language --}}
                <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="Main Programming Language" id="main_language" type="text">
                        <label for="main_language">Pick One Main Programming Language (Please Type Only One)*</label>
                    </div>
                    {{!-- <form action="#" id="main_language">
                        <label for="main_language">Choose Your Main Programming Language</label>
                        <p>
                            <label>
